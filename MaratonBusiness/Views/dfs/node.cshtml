@model List<MaratonBusiness.Models.DFSNodeMeta>

@{
    ViewBag.Title = "Node";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class=".container-fluid body-content">
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <td>
                            IP
                        </td>
                        <td>
                            Block Count
                        </td>
                        <td>
                            CPU Core
                        </td>
                        <td>
                            Memory
                        </td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Address
                            </td>
                            <td>
                                @item.Blockcount
                            </td>
                            <td>
                                @item.Cpu
                            </td>
                            <td>
                                @(item.Memory/(1024*1024*1024)) GB
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>