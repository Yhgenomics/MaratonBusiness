@model MaratonBusiness.Models.VMTaskIndex

@{
    ViewBag.Title = "index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li><a href="@Url.Action("index","Task")">Task</a></li>
</ol>
<div class="row">
    <div class="col-lg-8">
        <a href="@Url.Action("create","Task")" class="btn btn-info">Create</a>
    </div>
    <div class="col-sm-2">
    </div>
</div>
<hr />
<div class="row">
    <div class="col-lg-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <td>
                        #
                    </td>
                    <td>
                        Name
                    </td>
                    <td>
                        Status
                    </td>
                    <td>
                        CreateTime
                    </td>
                    <td>
                        Edit
                    </td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Tasks)
                {
                    <tr>
                        <td>
                            @item.Id
                        </td>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.State
                        </td>
                        <td>
                            @item.CreateTime.ToString("yyyy-MM-dd hh:mm:ss");
                        </td>
                        <td>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <hr />

        @Html.CreatePaginatio(Url,Model,"index","Task") 
    </div>
</div>