@{
    Layout = null;
}
@model Message.MessageServantStateReply

<div class="row">
    <div class="col-lg-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <td>
                        #
                    </td>
                    <td>
                        Status
                    </td>
                    <td>
                        CPU
                    </td>
                    <td>
                        Memory
                    </td>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Id.Count; i++)
                {
                    <tr onclick="selectServant({ 'id' : '@Model.Id[i]'})">
                        <td>
                            @Model.Id[i]
                        </td>
                        <td>
                            @Model.State[i]
                        </td>
                        <td>
                            @Model.Cpu[i]
                        </td>
                        <td>
                            @Model.Memory[i]
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>