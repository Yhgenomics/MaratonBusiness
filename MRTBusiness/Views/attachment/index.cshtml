@model List<MRTBusiness.Models.DbAttachment>
@{
    ViewBag.Title = "index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li><a href="@Url.Action("index","attachment")">Servant</a></li>
</ol>
<hr />

<link href="~/Content/uploadify.css" rel="stylesheet" />
<script src="~/Scripts/jquery.uploadify.min.js"></script>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            
            <script>
                $(function () {
                    $("#file_upload_1").uploadify({
                        width: 120,
                        height: 30,
                        swf: '@Url.Content("/Scripts/uploadify.swf")',
                        uploader: '@Url.Action("upload")',
                        'fileTypeDesc': 'Fastq Files',
                        'fileTypeExts': '*.fastq,*.fq',
                        method: 'post'
                    });
                });
            </script>
            <input type="file" id="file_upload_1" />
        </div>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-lg-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <td>
                        File Name
                    </td>
                    <td>
                        Remote Name
                    </td>
                    <td>
                        Status
                    </td> 
                    <td>
                        Create Time
                    </td>
                    <td>
                        Edit
                    </td>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model)
                {
                    <tr> 
                        <td>
                            @m.Name
                        </td>
                        <td>
                            <a href="yhfs://@m.RemotePath">@m.RemotePath</a>
                        </td>
                        <td>
                            @m.State
                        </td>
                        <td>
                            @m.CreateTime.ToString("yyyy-MM-dd HH:mm:ss")
                        </td>
                        <td>

                            @if(m.State == 2)
                            {
                                <a href="@Url.Action("create","Task" , new { inputs = m.RemotePath })" class="btn btn-info">Create Task</a>
                            }

                            <a href="@Url.Action("delete" , new { id = m.Id })" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>